<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:backgroundTintMode="screen"
    android:foreground="@color/abc_background_cache_hint_selector_material_dark">

    <TextView
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_weight="0.08"
        android:textColor ="#010100" />

    <TextView
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Buffalo chicken strips"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#ff922f" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Bagged salad/ lettuce"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:textColor="#93ff85" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Croutons"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:textColor="#b3955a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Shredded Cheese"
        android:id="@+id/textView5"
        android:textSize="30dp"
        android:textColor="#ffd75b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Bacon bits"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:textColor="#ff8d30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="*Dressing"
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:textColor="#010101" />

</LinearLayout>